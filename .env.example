# rustmust Environment Configuration
# Copy this file to .env and adjust values as needed

# Server Configuration
RUSTMUST_SERVER_HOST=0.0.0.0
RUSTMUST_SERVER_PORT=3000

# Database Configuration
RUSTMUST_DATABASE_URL=postgres://rustmust:rustmust@localhost:5432/rustmust

# Redis Configuration
RUSTMUST_REDIS_URL=redis://localhost:6379

# JWT Configuration
RUSTMUST_JWT_SECRET=your-super-secret-jwt-key-change-in-production
RUSTMUST_JWT_EXPIRY_HOURS=24

# Logging
RUSTMUST_LOG_LEVEL=info

# S3 Storage Configuration (MinIO for local dev)
RUSTMUST_S3_ENDPOINT=http://localhost:9000
RUSTMUST_S3_BUCKET=rustmust
RUSTMUST_S3_ACCESS_KEY=minioadmin
RUSTMUST_S3_SECRET_KEY=minioadmin
RUSTMUST_S3_REGION=us-east-1
